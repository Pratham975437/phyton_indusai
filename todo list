

tasks = []

while True:
    print("\n--- To-Do List ---")
    print("1. View tasks")
    print("2. Add task")
    print("3. Delete task")
    print("4. Exit")

    choice = input("Enter choice (1-4): ")

    if choice == "1":
        if not tasks:
            print("No tasks yet ✅")
        else:
            for i, task in enumerate(tasks, start=1):
                print(f"{i}. {task}")

    elif choice == "2":
        task = input("Enter new task: ")
        tasks.append(task)
        print("Task added ✔")

    elif choice == "3":
        if not tasks:
            print("No tasks to delete ❌")
        else:
            num = int(input("Enter task number to delete: "))
            if 1 <= num <= len(tasks):
                tasks.pop(num - 1)
                print("Task deleted ❌")
            else:
                print("Invalid task number!")

    elif choice == "4":
        print("Goodbye ")
        break

    else:
        print("Invalid choice! Try again.")
